{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["index.ts", "**/*.ts"],
  "exclude": [
    "../client",
    "../vite.config.ts",
    "../*.ts",
    "**/vite.ts",
    "**/vite.config.ts",
    "node_modules",
    "dist"
  ]
}